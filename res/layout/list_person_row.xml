<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/list_item_vertical_margin"
    android:orientation="horizontal"
>

    <ImageView android:id="@+id/iv_person"
	    android:layout_width="35dip"
	    android:layout_height="35dip"
	    android:layout_weight=".1"
	    android:src="@drawable/player_unknow_2"
	    android:layout_gravity="center_vertical|center_horizontal"
	    android:contentDescription="@string/button_desctiption_player_unknow"
	/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
    >

		<TextView
		    android:id="@+id/tv_fistname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:textSize="16sp"
		    android:layout_marginRight="5sp"
		/>

		<TextView
		    android:id="@+id/tv_lastname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="16sp"
		/>
		
	</LinearLayout>
 </LinearLayout>