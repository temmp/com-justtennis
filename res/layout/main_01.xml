<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
<RelativeLayout
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background_01"
    tools:context=".MainActivity"
>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="right|top"
	>
	    <ImageView
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:src="@drawable/menu_overflow_01"
	        android:onClick="onClickMenuOverFlow"
	    />
	    <LinearLayout
	        android:id="@+id/ll_menu_overflow_content"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:visibility="gone"
	    >
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_rotating"
		        android:onClick="onClickRotating"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_message"
		        android:onClick="onClickMessage"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_person"
		        android:onClick="onClickListPerson"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_share_apk"
		        android:onClick="onClickSendApk"
		        android:visibility="visible"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_db_backup"
		        android:onClick="onClickDBBackup"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_db_restore"
		        android:onClick="onClickDBRestore"
		    />
	    </LinearLayout>
	</LinearLayout>
<!--     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->
	<LinearLayout
	    android:id="@+id/main_menu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="vertical"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="80dp"
        android:rotation="338"
	>
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_user"
	        android:onClick="onClickUser"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_invite"
	        android:onClick="onClickListInvite"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_player"
	        android:onClick="onClickListPlayer"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_statistic"
	        android:onClick="onClickListStatistic"
	    />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:gravity="right|bottom"
	>

		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="48dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    android:background="@color/bleu_clair_1"
		>
<!-- 		    android:alpha=".5" -->
			<LinearLayout
			    android:id="@+id/ll_type_training"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight=".5"
			    android:gravity="center_horizontal"
			    android:onClick="onClickTypeTraining"
			    android:orientation="vertical"
			    android:background="@color/bleu_transparent_3"
			>
				<LinearLayout
				    android:id="@+id/ll_type_training_cursor"
				    android:layout_width="match_parent"
				    android:layout_height="5dp"
				    android:background="@color/bleu_transparent_5"
				/>
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:gravity="center_vertical|center_horizontal"
				    android:text="@string/button_training"
					android:textStyle="bold"
					android:textColor="@color/white"
				/>
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/ll_type_match"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight=".5"
			    android:gravity="center_horizontal"
			    android:onClick="onClickTypeMatch"
			    android:orientation="vertical"
			    android:background="@color/orange_pumpkin_transparent_3"
			>
				<LinearLayout
				    android:id="@+id/ll_type_match_cursor"
				    android:layout_width="match_parent"
				    android:layout_height="5dp"
				    android:background="@color/orange_tangelo"
				/>
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:gravity="center_vertical|center_horizontal"
				    android:text="@string/button_competition"
					android:textStyle="bold"
					android:textColor="@color/white"
				/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="bottom"
	>
	    <ImageView
	        android:id="@+id/iv_play"
	        android:layout_width="107dp"
	        android:layout_height="32dp"
		    android:layout_marginBottom="125dp"
		    android:layout_marginLeft="89dp"
		    android:rotation="68"
	        android:src="@drawable/menu_play"
	        android:onClick="onClickListPlayerInvite"
	    />
	    <ImageView
	        android:id="@+id/iv_match"
	        android:layout_width="140dp"
	        android:layout_height="32dp"
		    android:layout_marginBottom="140dp"
		    android:layout_marginLeft="66dp"
		    android:rotation="68"
	        android:src="@drawable/menu_match"
	        android:onClick="onClickListMatchInvite"
	    />
	</LinearLayout>
</RelativeLayout>
</LinearLayout>