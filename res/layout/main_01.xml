<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_01"
    tools:context=".MainActivity"
>
	<LinearLayout
	    android:id="@+id/main_menu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="vertical"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="65dp"
        android:rotation="338"
	>
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_user"
	        android:onClick="onClickUser"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_invite"
	        android:onClick="onClickListInvite"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_player"
	        android:onClick="onClickListPlayer"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@drawable/menu_statistic"
	        android:onClick="onClickListStatistic"
	    />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:orientation="vertical"
	    android:gravity="right|top"
	>
	    <ImageView
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:src="@drawable/menu_overflow_01"
	        android:onClick="onClickMenuOverFlow"
	    />
	    <LinearLayout
	        android:id="@+id/ll_menu_overflow_content"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:visibility="gone"
	    >
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_rotating"
		        android:onClick="onClickRotating"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_message"
		        android:onClick="onClickMessage"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_person"
		        android:onClick="onClickListPerson"
		        android:visibility="gone"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_share_apk"
		        android:onClick="onClickSendApk"
		        android:visibility="visible"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_db_backup"
		        android:onClick="onClickDBBackup"
		    />
		    <Button
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:text="@string/button_text_db_restore"
		        android:onClick="onClickDBRestore"
		    />
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="bottom"
	>
	    <ImageView
	        android:layout_width="107dp"
	        android:layout_height="32dp"
		    android:layout_marginBottom="110dp"
		    android:layout_marginLeft="75dp"
		    android:rotation="65"
	        android:src="@drawable/menu_play"
	        android:onClick="onClickListPlayerInvite"
	    />
	</LinearLayout>
</RelativeLayout>