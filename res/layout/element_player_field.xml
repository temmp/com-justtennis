<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
       <LinearLayout
          android:id="@+id/ll_firstname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:id="@+id/tv_firstname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_firstname"
              android:textSize="@dimen/player_text_size"
              android:textStyle="bold"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:visibility="gone" />

          <EditText
              android:id="@+id/et_firstname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size"
              android:hint="@string/txt_firstname" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_lastname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:id="@+id/tv_lastname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_lastname"
              android:textSize="@dimen/player_text_size"
              android:textStyle="bold"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:visibility="gone" />

          <EditText
              android:id="@+id/et_lastname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size"
              android:hint="@string/txt_lastname" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_birthday"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:id="@+id/tv_birthday"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_birthday"
              android:textSize="@dimen/player_text_size"
              android:textStyle="bold"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:visibility="gone" />

          <EditText
              android:id="@+id/et_birthday"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size"
              android:hint="@string/txt_birthday" />
          </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_phonenumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:id="@+id/tv_phonenumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_phonenumber"
              android:textSize="@dimen/player_text_size"
              android:textStyle="bold"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:visibility="gone" />

          <EditText
              android:id="@+id/et_phonenumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size"
              android:hint="@string/txt_phonenumber" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_ranking"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_ranking"
              android:textSize="@dimen/player_text_size"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:textStyle="bold" />

          <Spinner
              android:id="@+id/sp_ranking"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/player_layout_field_marging_bottom"
          android:background="@color/player_form_field_background_color"
          android:orientation="vertical"
          android:padding="@dimen/player_layout_field_padding" >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/txt_type"
              android:textSize="@dimen/player_text_size"
              android:textColor="@android:color/secondary_text_light_nodisable"
              android:textStyle="bold" />

          <Spinner
              android:id="@+id/sp_type"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/player_field_margin_left"
              android:gravity="center_horizontal"
              android:textSize="@dimen/player_field_size" />
      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_location"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/invite_layout_field_marging_bottom"
         android:background="@color/player_form_field_background_color"
         android:orientation="vertical"
         android:padding="@dimen/invite_layout_field_padding"
         android:onClick="onClickLocation" >
          
         <TextView
             android:id="@+id/tv_location"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/txt_location"
             android:textSize="@dimen/player_text_size"
             android:textStyle="bold"
             android:textColor="@android:color/secondary_text_light_nodisable"
             android:visibility="gone" />

         <LinearLayout
             android:id="@+id/ll_location_detail"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/invite_field_margin_left"
             android:orientation="vertical"
             android:visibility="gone"
	         android:onClick="onClickLocationDetail"			              
         >
          <TextView
              android:id="@+id/tv_location_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/invite_field_size_small_1"
              android:textStyle="bold"
              android:hint="@string/txt_location" />
          <TextView
              android:id="@+id/tv_location_line1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/invite_field_size_small_2"
              android:hint="@string/txt_location" />
          <TextView
              android:id="@+id/tv_location_line2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/invite_field_size_small_2"
              android:hint="@string/txt_location" />
         </LinearLayout>			
          <TextView
             android:id="@+id/et_location"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/player_field_margin_left"
             android:gravity="center_horizontal"
             android:textSize="@dimen/player_field_size"
             android:textColor="@color/hint_text_color"
             android:hint="@string/txt_location" />
     </LinearLayout>
</LinearLayout>