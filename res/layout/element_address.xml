<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ed_address_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_address_line_1"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_address_postal_code"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:maxLines="1"
                android:hint="@string/hint_address_postal_code" />

            <EditText
                android:id="@+id/ed_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/hint_address_city" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
        android:gravity="bottom" >

        <Button
            android:id="@+id/btn_add_demande_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_background_color"
            android:onClick="onClickDemandeAddNo"
            android:text="@string/button_text_no"
            android:textColor="@color/button_text_color" />
    </LinearLayout>

</LinearLayout>